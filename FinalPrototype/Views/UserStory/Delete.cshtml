@model FinalPrototype.Models.DBEntities.UserStructure

@{

    <h3>Structure Deletion</h3>
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<hr />
@if (!string.IsNullOrWhiteSpace(@errorMessage))
{
    <div class="alert alert-danger">
        <strong> Error! </strong>@errorMessage
    </div>
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
}
<form action="Delete" method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type ="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="by" readonly/>     
    </div>
    <div class="mb-3">
        <label class="form-label">Number of Acts</label>
            <input type="text" class="form-control" asp-for="Acts" readonly />      
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" readonly />
    </div>
    <div class="d-grid">
        <button type="submit" class"btn btn-success" onclick="return function('Are you sure you want to delete: @Model.Name')">Delete</button>
    </div>
</form>


